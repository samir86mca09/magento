<config>
	<sections>
		<em0071 translate="label" module="em0071settings">
			<label>EM0071 Settings</label>
			<tab>general</tab>
			<frontend_type>text</frontend_type>		
			<frontend_model>em0071settings/adminhtml_system_config_form</frontend_model>
			<sort_order>1000</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			 <groups>
				<general translate="label">
					<label>General</label>
					<frontend_type>text</frontend_type>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>  
					<sort_order>0</sort_order>
					<fields>
						<disable_default_nav translabel="label, comment">
							<label>Disable default navigation</label>
							<comment><![CDATA[<strong>If using EM MegaMenuPro, default catalog navigation should be disabled</strong>]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>10</sort_order>
						</disable_default_nav>
						<freezed_top_menu translabel="label, comment">
							<label>Freezed Top Menu</label>
							<comment><![CDATA[<strong>Make the menu on top while scrolling</strong>]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>11</sort_order>
						</freezed_top_menu>
						<disable_frontend_variation>
							<label>Disable Variation block on frontend</label>
							<comment><![CDATA[<strong>Display the variation module on frontend.</strong> For theme demonstration purpose.]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>20</sort_order>
						</disable_frontend_variation>
						<disable_footer_links>
							<label>Remove footer links</label>
							<comment><![CDATA[<strong>Remove the default Magento footer links: Site Map, Search Terms, Advanced Search, Orders and Returns, Contact Us</strong><br/> You can add your own footer links by create a static block, and insert new widget instance EM Static Block on to the Footer position.]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>30</sort_order>
						</disable_footer_links>
						<image_bgcolor translate="label">
							<label>Background color of product image.</label>
							<comment><![CDATA[<strong>Specify background color of product image.</strong> If not specified white color is used by default. <strong>Storage Cache</strong> must be flushed in order to see its change.<br/>Syntax: #number]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>50</sort_order>
						</image_bgcolor>
					</fields>
				</general>
				<typography translate="label">
					<label>Typography</label>
					<frontend_type>text</frontend_type>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>  
					<sort_order>10</sort_order>
					<fields>
                        <!-- Color -->
						<general_color translabel="label, comment">
							<label>General Color</label>
							<comment><![CDATA[<strong>Default color used in body, normal text...</strong><br/>Syntax: #number or rgba(...)<br/>Default: #6a6a6a <span class="color_pattern" style="background-color:#6a6a6a"/>]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>10</sort_order>
						</general_color>

						<primary_color translabel="label comment">
							<label>Primary Color</label>
							<comment><![CDATA[<strong>Link, title's color</strong><br/>Syntax: #number or rgba(...)<br/>Default: #2d2d2d <span class="color_pattern" style="background-color:#2d2d2d"/>]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>20</sort_order>
						</primary_color>
						
						<secondary_color translabel="label comment">
							<label>Secondary Color</label>
							<comment><![CDATA[<strong>The secondary color used in this theme: price, hover text, title's page</strong><br/>Syntax: #number or rgba(...)<br/>Default: #f27b04 <span class="color_pattern" style="background-color:#f27b04"/>]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>30</sort_order>
						</secondary_color>
						
						<secondary2_color translabel="label comment">
							<label>Secondary 2 Color</label>
							<comment><![CDATA[<strong>Another secondary color used in this theme: text in details page</strong><br/>Syntax: #number or rgba(...)<br/>Default: #74ca78 <span class="color_pattern" style="background-color:#74ca78"/>]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>40</sort_order>
						</secondary2_color>
                        
						<negative_color translabel="label comment">
							<label>Negative Color</label>
							<comment><![CDATA[<strong>Negative color used when text display on negative background</strong><br/>Syntax: #number or rgba(...)<br/>Default: #ffffff <span class="color_pattern" style="background-color:#ffffff"/>]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>50</sort_order>
						</negative_color>
                        
                        <!-- Line Color -->
						<line_color translabel="label comment">
							<label>Line Color</label>
							<comment><![CDATA[<strong>Line and border's color is used in table</strong><br/>Syntax: #number or rgba(...)<br/>Default: #d0d0d0 <span class="color_pattern" style="background-color:#d0d0d0"/>]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>60</sort_order>
						</line_color>
                        
                        <line2_color translabel="label comment">
							<label>Line 2 Color</label>
							<comment><![CDATA[<strong>Line and border's color is used in border bottom sidebar</strong><br/>Syntax: #number or rgba(...)<br/>Default: #706969 <span class="color_pattern" style="background-color:#706969"/>]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>61</sort_order>
						</line2_color>
                        
                        <!-- Bg Color -->
						<primary_bgcolor translabel="label comment">
							<label>Primary Background Color</label>
							<comment><![CDATA[<strong>Background color used in body or main sections</strong><br/>Syntax: #number or rgba(...)<br/>Default: #ffffff <span class="color_pattern" style="background-color:#ffffff"/>]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>62</sort_order>
						</primary_bgcolor>
						
						<secondary_bgcolor translabel="label comment">
							<label>Secondary Background Color</label>
							<comment><![CDATA[<strong>Background color used in background title or background cart</strong><br/>Syntax: #number or rgba(...)<br/>Default: #ff4400 <span class="color_pattern" style="background-color:#ff4400"/>]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>63</sort_order>
						</secondary_bgcolor>
                        
                        <secondary2_bgcolor translabel="label comment">
							<label>Secondary 2 Background Color</label>
							<comment><![CDATA[<strong>Background color used in header, footer, or label hover</strong><br/>Syntax: #number or rgba(...)<br/>Default: #f48b05 <span class="color_pattern" style="background-color:#f48b05"/>]]></comment>
							<frontend_type>text</frontend_type>
							<frontend_class>colorjoe</frontend_class>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>64</sort_order>
						</secondary2_bgcolor>
                        
