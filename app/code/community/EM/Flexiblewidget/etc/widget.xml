<widgets>
    <flexiblewidget_list type="flexiblewidget/list" translate="name description" module="flexiblewidget" template="flexiblewidget/list.phtml">
        <name>Flexible Widget</name>
        <description>Adds a simple list of Product</description>
        <parameters>
			<column_count>
	            <label>Column Count</label>
                <visible>1</visible>
                <required>1</required>
                <description>The numbers of product per a row</description>
                <type>text</type>
                <value>3</value>
                <sort_order>1</sort_order>
            </column_count>
			<limit_count>
                <label>Limit Count</label>
                <description>The numbers of product will be show</description>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>9</value>
                <sort_order>2</sort_order>
            </limit_count>
			 <attribute_set>
                <label>Enabled Attribute sets</label>
                <visible>1</visible>
                <description>Attribute Sets</description>
                <type>select</type>
                <source_model>flexiblewidget/Attributeset</source_model>
                <sort_order>3</sort_order>
            </attribute_set>
			  <if>
                <label>The condition for filterring Product</label>
                <visible>1</visible>
                <type>text</type>
                <value></value>
                <sort_order>4</sort_order>
            </if>
			
			<order_by>
                <label>Order by</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <order_by_1 translate="label">
                        <value>name asc</value>
                        <label>Name ASC</label>
                    </order_by_1>
					<order_by_11 translate="label">
                        <value>name desc</value>
                        <label>Name DESC</label>
                    </order_by_11>				
                    <order_by_2 translate="label">
                        <value>price asc</value>
                        <label>Price ASC</label>
                    </order_by_2>
                    <order_by_21 translate="label">
                        <value>price desc</value>
                        <label>Price DESC</label>
                    </order_by_21>					
                </values>
                <sort_order>5</sort_order>
            </order_by>
			
            <category translate="label">
                <visible>1</visible>
                <label>Category</label>
                <type>label</type>
                <helper_block>
                    <type>flexiblewidget/chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Category...</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>6</sort_order>
            </category>
            
			<frontend_title>
				<label>Frontend Title</label>	
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
				<sort_order>7</sort_order>
				<value>Flexible Widget</value>
			</frontend_title>	
			
            <template translate="label">
                <label>Frontend Template</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <list translate="label">
                        <value>flexiblewidget/list.phtml</value>
                        <label>List products</label>
                    </list>
					<grid translate="label">
                        <value>flexiblewidget/grid.phtml</value>
                        <label>Grid products</label>
                    </grid>
					<cust translate="label">
                        <value>custom_template</value>
                        <label>Display as custom template ...</label>
                    </cust>
                </values>
				<sort_order>8</sort_order>
            </template>
			<custom_theme>				
				<label>Custom template :</label>
				<description>Effect only when selecting "Display as custom template..."</description>
				<visible>1</visible>				
				<type>text</type>
				<value></value>
				<sort_order>9</sort_order>
			</custom_theme>
        </parameters>
    </flexiblewidget_list>
</widgets>