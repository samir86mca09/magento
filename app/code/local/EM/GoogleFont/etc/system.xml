<config>
    <sections>
        <googlefont translate="label" module="googlefont">
            <label>Google Font Mobile</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>			
			<frontend_model>googlefont/adminhtml_system_config_form</frontend_model>	
            <sort_order>1001</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			 <groups>
				<googlefont_config translate="label">					
                    <label>Google Font Config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>  
					<fields>
						<enable_1 translate="label comment">
							<label>Enable Heading Font</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable_1>	
                        <font_1 translate="label comment">
                            <label>Heading Font</label>
                            <frontend_type>select</frontend_type>
							<frontend_model>googlefont/adminhtml_system_config_form_field_font</frontend_model>
							<source_model>googlefont/config_font</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </font_1>
						<option_1 translate="label comment">
                            <label>Heading Font Styles</label>
                            <frontend_type>select</frontend_type>
							<frontend_model>googlefont/adminhtml_system_config_form_field_option</frontend_model>
							<source_model>googlefont/config_option</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </option_1>			
						<enable_2 translate="label comment">
							<label>Enable Heading Font 2</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable_2>	
						<font_2 translate="label comment">
                            <label>Heading Font 2</label>
                            <frontend_type>select</frontend_type>
							<frontend_model>googlefont/adminhtml_system_config_form_field_font</frontend_model>
							<source_model>googlefont/config_font</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </font_2>
						<option_2 translate="label comment">
                            <label>Heading Font Styles 2</label>
                            <frontend_type>select</frontend_type>
							<frontend_model>googlefont/adminhtml_system_config_form_field_option</frontend_model>
							<source_model>googlefont/config_option</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </option_2>
						<enable_3 translate="label comment">
							<label>Enable Paragraph Font</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable_3>
						<font_3 translate="label comment">
                            <label>Paragraph Font</label>
                            <frontend_type>select</frontend_type>
							<frontend_model>googlefont/adminhtml_system_config_form_field_font</frontend_model>
							<source_model>googlefont/config_font</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </font_3>
						<option_3 translate="label comment">
                            <label>Paragraph Font Styles</label>
                            <frontend_type>select</frontend_type>
							<frontend_model>googlefont/adminhtml_system_config_form_field_option</frontend_model>
							<source_model>googlefont/config_option</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </option_3>	
					</fields>
				</googlefont_config>
            </groups>
        </googlefont>
    </sections>
</config>
