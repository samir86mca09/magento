<?xml version="1.0"?>
<config>
    <modules>
        <Bubble_InstantSearch>
            <version>1.1.0</version>
        </Bubble_InstantSearch>
    </modules>
    <global>
        <blocks>
            <bubble_instant>
                <class>Bubble_InstantSearch_Block</class>
            </bubble_instant>
            <catalog>
                <rewrite>
                    <product_list>Bubble_InstantSearch_Block_Product_List</product_list>
                </rewrite>
            </catalog>
        </blocks>
        <models>
            <bubble_instant>
                <class>Bubble_InstantSearch_Model</class>
            </bubble_instant>
        </models>
    </global>
    <frontend>
        <layout>
            <updates>
                <bubble_instant>
                    <file>bubble/instant.xml</file>
                </bubble_instant>
            </updates>
        </layout>
        <events>
            <controller_action_layout_render_before_catalogsearch_result_index>
                <observers>
                    <bubble_instant>
                        <class>bubble_instant/observer</class>
                        <method>handleAjaxSearch</method>
                    </bubble_instant>
                </observers>
            </controller_action_layout_render_before_catalogsearch_result_index>
        </events>
    </frontend>
</config>